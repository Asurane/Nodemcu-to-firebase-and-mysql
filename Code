#include <ESP8266WiFi.h>
#include <FirebaseArduino.h>
#include <DHT.h>
#include <Wire.h>
#include <Adafruit_GFX.h>
#include <ESP_Adafruit_SSD1306.h>
#include <ESP8266WiFiMulti.h>
#include <ESP8266HTTPClient.h>

ESP8266WiFiMulti WiFiMulti;

// Config Firebase
#define FIREBASE_HOST "authDomain ของ firebase"
#define FIREBASE_AUTH "รหัสลับ firebase"

#define LED_PIN D6
// Config connect WiFi
#define WIFI_SSID "ชื่อ wifi"
#define WIFI_PASSWORD "หรัส wifi"

#define OLED_RESET LED_BUILTIN
Adafruit_SSD1306 display(OLED_RESET); //ตั้งค่าแสดงผมของจอ oled

// Config DHT
#define DHTTYPE DHT11 //สมารถเปลี่ยนเป็น DHT22 ใด้โดยแก้ตรงนี้

String name;
DHT dht(DHTPIN, DHTTYPE,15);
byte img [] = { 
